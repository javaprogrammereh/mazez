<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:layoutDirection="rtl"
    android:background="@color/withe"
    tools:context=".signup">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layoutDirection="rtl"
            android:textDirection="rtl">
            <ImageView
                android:id="@+id/logo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="16dp"
                android:background="@drawable/shape_border_logo"
                android:src="@drawable/logo" />
            <EditText
                android:id="@+id/edtunamesingup"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/logo"
                android:layout_margin="6dp"
                android:background="@drawable/shape_search"
                android:hint="نام کاربری"
                android:inputType="text"
                android:padding="5dp"
                android:textColor="@color/withe"
                android:textColorHint="@color/withe"
                android:textDirection="rtl"
                android:textSize="12sp" />


            <EditText
                android:id="@+id/edtpnamesingup"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/edtunamesingup"
                android:layout_margin="6dp"
                android:background="@drawable/shape_search"
                android:hint="رمز عبور"
                android:inputType="numberPassword"
                android:maxLength="8"
                android:padding="5dp"
                android:textAlignment="viewStart"
                android:textColor="@color/withe"
                android:textColorHint="@color/withe"
                android:textDirection="rtl"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/edtemailsingup"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/edtpnamesingup"
                android:layout_margin="6dp"
                android:background="@drawable/shape_search"
                android:hint="ایمیل"
                android:inputType="textEmailAddress"
                android:padding="5dp"
                android:textColor="@color/withe"
                android:textColorHint="@color/withe"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/edtphonesingup"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/edtemailsingup"
                android:layout_margin="6dp"
                android:background="@drawable/shape_search"
                android:hint="شماره تماس"
                android:inputType="phone"
                android:maxLength="11"
                android:padding="5dp"
                android:textAlignment="viewStart"
                android:textColor="@color/withe"
                android:textColorHint="@color/withe"
                android:textDirection="rtl"
                android:textSize="12sp" />
            <Button
                android:id="@+id/ok_sing_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/edtphonesingup"
                android:layout_centerHorizontal="true"
                android:layout_margin="6dp"
                android:background="@drawable/shape_frg"
                android:text="@string/sabtnam"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/txtgotologin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:layout_below="@id/ok_sing_up"
                android:text="@string/login"
                android:textColor="@color/colorSecondaryText" />
        </RelativeLayout>

    </ScrollView>

</RelativeLayout>